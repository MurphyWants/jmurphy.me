}

.body-container a {
	color: #CCCC99;
}

.footer {
	position: absolute;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: white;
	width: 100%;
	padding: 10px;
	text-align: center;
}

.line-break {
	width: 100%;
	height: 10px;
	/*background-color: #CCCC99;*/
}
</style>
